---
interface Props {
  id: string;
}

const { id } = Astro.props;
---
<button
  class="flex-row justify-center text-white hover:bg-zinc-800 bg-black cursor-pointer focus:outline-none font-medium rounded-lg px-5 py-2.5 text-center inline-flex items-center dark:focus:ring-[#1da1f2]/55 mb-2 hover:shadow-lg transition-all duration-200 ease-in-out hover:scale-100 scale-90 gap-x-2 opacity-90 hover:opacity-100"
  id= { id }
  >
  <slot/>
  </button
>
